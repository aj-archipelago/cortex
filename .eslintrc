{
    "env": {
      "browser": true,
      "es2021": true,
        "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "import"
    ],
    "rules": {
        "import/no-unresolved": "error",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js"],
            "moduleDirectory": ["node_modules", "src"]
          }
        },
        "import/core-modules": ["ava"]
    }
  }